                <DataGridTemplateColumn Header="Image" Width="SizeToCells" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding Img}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>-->
        
        <!--<ListBox ItemsSource="{Binding Deck}" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <ContentControl Content="{Binding Img}"
                                        Width="100" Height="100" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Ilość kart komputera:</TextBlock>
        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" x:Name="ile2" VerticalAlignment="Center" Margin="0,40,0,0" Text="{Binding EnemyCards.Count}"/>

        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.Row="2" Grid.Column="2">Ilość Twoich kart:</TextBlock>
        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" x:Name="ile"  Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Text="{Binding MyCards.Count}"/>
        
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Cursor="Hand" Padding="10" FontWeight="Bold" Click="GiveOutCardsButtonClick" >Rozdaj karty!</Button>
    </Grid>
</Page>
