<Page x:Class="CardGames.WarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardGames"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="War">

    <Grid Background="#FF367E0D" x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.Column="1">Komputer</TextBlock>
        <Image Source="Images\back.jpg" Margin="0,40" Grid.Column="1" Visibility="Hidden" x:Name="EnemyCards"/> <!-- Hidden -->
        <Image Source="Images\back.jpg" Margin="0,40" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Hidden" x:Name="EnemyTakenCards"/> <!-- Hidden -->

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ContentControl Content="{Binding EnemyThrownCard.Img}" Margin="0,40,10,40" Grid.Column="0" HorizontalAlignment="Right" />
            <ContentControl Content="{Binding MyThrownCard.Img}" Margin="10,40,0,40" Grid.Column="1" HorizontalAlignment="Left" />
        </Grid>

        <Image Source="Images\back.jpg" Margin="0,40" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Visibility="Hidden"  x:Name="MyTakenCards"/> <!-- Hidden -->
        <Image Source="Images\back.jpg" Grid.Row="2" Margin="0,40" Grid.Column="1" Cursor="Hand" MouseDown="ThrowCard" Visibility="Hidden" x:Name="MyCards"/>  <!-- Hidden -->
        <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.Row="2" VerticalAlignment="Bottom" Grid.Column="1">Ty</TextBlock>


